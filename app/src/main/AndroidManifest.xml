<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.news">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.news.Application"
        android:allowBackup="true"
        android:icon="@drawable/main_news_icon"
        android:roundIcon="@drawable/main_news_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name="com.example.news.presentaion.activies.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.news.presentaion.activies.HomeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.example.news.presentaion.activies.DetailActivity" />
    </application>


</manifest>